<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/main"
    android:background="@color/white"
    tools:context=".LogIn">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"
        android:src="@drawable/ajiralogo" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@color/teal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nofity"
                android:text="The expert below will be notified of your service request. Please confirm that this is the expert you wish to hire for your service request"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/expert_name"
                android:text="Expert Name: "
                android:layout_gravity="center"
                android:padding="2dp"
                android:textColor="@color/white"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/expert_service"
                android:text="Expert Service: "
                android:padding="2dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/service_charge"
                android:text="Service Charge: "
                android:padding="2dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Create Job"
                android:id="@+id/create_jobButton"
                android:textColor="@color/teal"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/white"
                app:cornerRadius = "20dp"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>